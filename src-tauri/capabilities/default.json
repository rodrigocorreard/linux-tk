{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "run-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".*"
            }
          ]
        },
        {
          "name": "run-package-manager",
          "cmd": "sh",
          "args": [
            {
              "validator": ".*/manage_(apt|flatpak|snap)_package\\.sh"
            },
            {
              "validator": "(install|remove)"
            },
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    "fs:default"
  ]
}